{
	"compilerOptions": {
		"target": "es5",
		"outDir": "dist",
		"module": "es2015",
		"moduleResolution": "node",
		"jsx": "react",
		"allowSyntheticDefaultImports": true,
		"alwaysStrict": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"lib": ["dom", "es2017"]
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
